<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>
<h1> <%= @subject.model_name.human %> </h1>

<hr>

<div class="form_content">
    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>

        <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description, class:"form-control", placeholder:t('placeholder.subject_description') %>
        </div>
        
        <button type="submit">
            <%= t('buttons.save') %>
        </button>
    <% end %>
</div>