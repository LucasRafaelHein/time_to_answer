<!-- Os comandos utilizados foram:  rails g controller AdminsBackoffice::Admins index -->
<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>

<h1>Listando Assuntos/Áreas</h1>

<hr>

<div class="table_adm">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Descrição</th>
                <th class="add_admin">
                    <%= link_to new_admins_backoffice_subject_path, class: "table_button_admin" do %>
                        <%= image_tag 'user-plus', size: "25x25" %>
                    <% end %>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @subjects.each do |subject| %>
            <tr>
                <td> <%= subject.id %> </td>
                <td> <%= subject.description %> </td>
                <td style="width: 20px;">
                    <%= link_to edit_admins_backoffice_subject_path(subject), class: "table_button_admin" do %>
                        <%= image_tag 'pencil-duotone', size: "25x25" %>
                    <% end %>
                </td>
                <td style="width: 20px;">
                    <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "table_button_admin", data: { confirm: "Deseja realmente excluir esse Assunto/Área?"} do %>
                        <%= image_tag 'trash-duotone', size: "25x25" %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>