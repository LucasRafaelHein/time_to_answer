<!-- Os comandos utilizados foram:  rails g controller AdminsBackoffice::Admins index -->
<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>

<h1>Admins</h1>

<hr>

<div class="table_adm">
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th class="add_admin">
                    <%= link_to new_admins_backoffice_admin_path, class: "table_button_admin" do %>
                        <%= image_tag 'user-plus', size: "25x25" %>
                    <% end %>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <td> <%= admin.id %> </td>
                <td> <%= admin.email %> </td>
                <td style="width: 20px;">
                    <%= link_to edit_admins_backoffice_admin_path(admin), class: "table_button_admin" do %>
                        <%= image_tag 'pencil-duotone', size: "25x25" %>
                    <% end %>
                </td>
                <td style="width: 20px;">
                    <%= link_to admins_backoffice_admin_path(admin), method: :delete, class: "table_button_admin", data: { confirm: "Deseja realmente excluir o Administrador"} do %>
                        <%= image_tag 'trash-duotone', size: "25x25" %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>