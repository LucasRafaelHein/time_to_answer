<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>
<h1><%= action_message %></h1>

<hr>

<div class="form_content">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class:"form-control", placeholder:"Email do Administrador" %>
        </div>
        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, class:"form-control", placeholder:"Senha" %>
        </div>
        <div class="form-group">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Confirmar Senha" %>
        </div>
        
        <button type="submit">Salvar</button>
    <% end %>
</div>