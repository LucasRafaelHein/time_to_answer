<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>
<h1><%= @admin.model_name.human %></h1>

<hr>

<div class="form_content">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class:"form-control", placeholder:t('placeholder.email_adm') %>
        </div>
        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, class:"form-control", placeholder:t('placeholder.password') %>
        </div>
        <div class="form-group">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, class:"form-control", placeholder:t('placeholder.password_confirmation') %>
        </div>
        
        <button type="submit">
            <%= t('buttons.save') %>
        </button>
    <% end %>
</div>