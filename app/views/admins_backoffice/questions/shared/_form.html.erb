<%= stylesheet_link_tag "admins_backoffice_admin", "data-turbo-track": "reload" %>
<h1><%= "#{action_message} Pergunta" %></h1>

<hr>

<div class="form_content">
    <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>

        <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class:"form-control", placeholder:"Descrição da pergunta", rows: 5 %>
        </div>

        <div class="form-group">
            <%= form.label :subject_id %>
            <%= form.collection_select(:subject_id, Subject.all, :id, :description) %>
        </div>
        
        <button type="submit">Salvar</button>
    <% end %>
</div>